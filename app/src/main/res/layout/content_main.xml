<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pservice.manas.busservice.MainActivity"
    android:background="@drawable/bus_back"
    tools:showIn="@layout/activity_main">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:id="@+id/ma_iv"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_below="@+id/ma_iv"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Bus Tracker"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_above="@+id/ma_ll"
        android:layout_centerHorizontal="true"
        android:text="Continue as"/>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:id="@+id/ma_ll"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="50dp"
    android:orientation="horizontal">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:background="@drawable/rectangle_background"
        android:textColor="@color/white"
        android:id="@+id/ma_btn1"
        android:text="Driver"/>

    <TextView
        android:layout_width="2dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@drawable/rectangle_background"
        android:textColor="@color/white"
        android:id="@+id/ma_btn2"
        android:text="Customer"/>

</LinearLayout>

</RelativeLayout>
