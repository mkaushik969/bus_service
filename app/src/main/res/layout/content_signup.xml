<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bus_back"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pservice.manas.busservice.SignupActivity"
    tools:showIn="@layout/activity_signup">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/sa_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sa_iv"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/sa_name"
        android:inputType="text"
        android:background="@color/white"
        android:hint="Full Name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/sa_pno"
        android:padding="10dp"
        android:inputType="text"
        android:layout_below="@+id/sa_name"
        android:background="@color/white"
        android:hint="Bus No."/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/sa_pass"
        android:inputType="textPassword"
        android:padding="10dp"
        android:layout_below="@+id/sa_pno"
        android:background="@color/white"
        android:hint="Password."/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lines="4"
        android:id="@+id/sa_stops"
        android:padding="10dp"
        android:gravity="top"
        android:layout_below="@+id/sa_pass"
        android:background="@color/white"
        android:hint="Stops"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:id="@+id/sa_btn_signup"
        android:background="@drawable/rectangle_background"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
